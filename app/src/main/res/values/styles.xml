<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.Iwillpay.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="android:letterSpacing">0.005</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#DD000000</item>
    </style>
    <style name="Widget.Iwillpay.TextView.EliTitle" parent="Widget.Iwillpay.TextView">
        <item name="android:textSize">20sp</item>
        <item name="fontWeight">900</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Widget.Iwillpay.TextView.EliValue" parent="Widget.Iwillpay.TextView.EliTitle">
        <item name="android:textColor" >@color/red_700</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Widget.Iwillpay.TextView.EliRemaining" parent="Widget.Iwillpay.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="Widget.Iwillpay.TextView.EliDescription" parent="Widget.Iwillpay.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#7400000F</item>
    </style>
    <style name="Widget.Iwillpay.TextView.EliDetailsBtn" parent="Widget.Iwillpay.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Widget.Iwillpay.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/red_700</item>
        <item name="android:textSize">9sp</item>
        <item name="android:letterSpacing">0.005</item>
        <item name="android:paddingLeft">@dimen/common_margin</item>
        <item name="android:paddingTop">@dimen/common_margin</item>
        <item name="android:paddingRight">@dimen/common_margin</item>
        <item name="android:paddingBottom">@dimen/common_margin</item>
    </style>
</resources>